@model ProyectoONGDBNoSQL.ViewModels.ComunicacionViewModel

@{
    ViewData["Title"] = "Editar Comunicación";
}

<h2>Editar Comunicación</h2>

<form asp-action="Edit" method="post">
   
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="UsuarioId">Seleccione Destinatario</label>
        @Html.DropDownListFor(model => model.UsuarioId, Model.UsuariosList, "Seleccione un destinatario", new { @class = "form-control" })
        <span asp-validation-for="UsuarioId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FechaCreacion">Fecha de Envío</label>
        <input asp-for="FechaCreacion" class="form-control" type="date" />
        <span asp-validation-for="FechaCreacion" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Contenido">Contenido</label>
        <textarea asp-for="Contenido" class="form-control"></textarea>
        <span asp-validation-for="Contenido" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}