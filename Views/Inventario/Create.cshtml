@model ONG.Models.Inventario

@{
    ViewData["Title"] = "Agregar Inventario";
    SelectList recursos = ViewBag.Recursos as SelectList;
}

<h2 class="text-primary">Agregar Inventario</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="IdRecurso">Nombre del recurso</label>
        <select asp-for="IdRecurso" class="form-control" asp-items="recursos">
            <option value="">Seleccione un recurso</option>
        </select>
        <span asp-validation-for="IdRecurso" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CantidadDisponible"></label>
        <input asp-for="CantidadDisponible" class="form-control" type="number" />
        <span asp-validation-for="CantidadDisponible" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Ubicacion"></label>
        <input asp-for="Ubicacion" class="form-control" />
        <span asp-validation-for="Ubicacion" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
