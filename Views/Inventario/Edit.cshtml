@model ONG.Models.Inventario

<h2>Editar Inventario</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="IdInventario" />

    <div class="form-group">
        <label for="IdRecurso">Recurso</label>
        <select asp-for="IdRecurso" class="form-control" asp-items="ViewBag.Recursos"></select>
    </div>

    <div class="form-group">
        <label asp-for="CantidadDisponible"></label>
        <input asp-for="CantidadDisponible" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Ubicacion"></label>
        <input asp-for="Ubicacion" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
