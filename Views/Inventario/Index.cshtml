@model IEnumerable<ONG.Models.Inventario>
@{
    ViewData["Title"] = "Inventario";
    var nombres = ViewBag.RecursoNombres as Dictionary<string, string>;
}

<h2>Inventario</h2>

<a class="btn btn-primary mb-3" asp-action="Create">
    <i class="bi bi-plus-circle"></i> Agregar
</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre del Recurso</th>
            <th>Cantidad</th>
            <th>Ubicaci√≥n</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@(nombres != null && nombres.ContainsKey(item.IdRecurso) ? nombres[item.IdRecurso] : "Desconocido")</td>
                <td>@item.CantidadDisponible</td>
                <td>@item.Ubicacion</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdInventario" class="btn btn-warning">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.IdInventario" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
