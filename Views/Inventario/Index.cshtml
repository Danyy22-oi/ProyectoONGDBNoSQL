@model List<ONG.Models.Inventario>

@{
    ViewData["Title"] = "Inventario";
}

<h2>Inventario</h2>

<a asp-action="Create" class="btn btn-primary">Agregar</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Recurso ID</th>
            <th>Cantidad</th>
            <th>Ubicaci√≥n</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IdRecurso</td>
                <td>@item.CantidadDisponible</td>
                <td>@item.Ubicacion</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdInventario" class="btn btn-warning">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.IdInventario" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
