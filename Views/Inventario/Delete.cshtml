@model ONG.Models.Inventario

<h2>Eliminar Inventario</h2>

<p>¿Estás seguro de que deseas eliminar este inventario?</p>

<dl class="row">
    <dt class="col-sm-2">Cantidad</dt>
    <dd class="col-sm-10">@Model.CantidadDisponible</dd>

    <dt class="col-sm-2">Ubicación</dt>
    <dd class="col-sm-10">@Model.Ubicacion</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="IdInventario" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
