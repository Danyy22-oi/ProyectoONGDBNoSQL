@model ONG.Models.Recurso

@{
    ViewData["Title"] = "Agregar Recurso";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="NombreRecurso"></label>
        <input asp-for="NombreRecurso" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Tipo"></label>
        <input asp-for="Tipo" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="UnidadMedida"></label>
        <input asp-for="UnidadMedida" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
