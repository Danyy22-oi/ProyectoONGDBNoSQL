@{
    ViewData["Title"] = "Bienvenido a ProyectoONG";
}

<div class="welcome-page">
    <!-- Hero Section -->
    <section class="hero-banner">
        <div class="container">
            <h1 class="hero-title">Bienvenido a <span>ProyectoONG</span></h1>
            <p class="hero-subtitle">Plataforma integral para la gestión de recursos, beneficiarios y proyectos sociales</p>

            <div class="stats-grid">
                <div class="stat-item">
                    <div class="stat-number">+250</div>
                    <div class="stat-label">Beneficiarios</div>
                </div>
                <div class="stat-item">
                    <div class="stat-number">1,200</div>
                    <div class="stat-label">Recursos</div>
                </div>
                <div class="stat-item">
                    <div class="stat-number">85</div>
                    <div class="stat-label">Voluntarios</div>
                </div>
            </div>
        </div>
    </section>

    <!-- Quick Access Section -->
    <section class="quick-access">
        <div class="container">
            <h2 class="section-title">Accesos Rápidos</h2>
            <p class="section-description">Selecciona el módulo que deseas gestionar</p>

            <div class="access-grid">
                <!-- Usuarios -->
                <div class="access-card card-volunteers">
                    <div class="card-icon">
                        <i class="bi bi-person-lines-fill"></i>
                    </div>
                    <h3 class="card-title">Ususarios</h3>
                    <p class="card-description">Gestión de Usuarios</p>
                    <a asp-controller="Usuario" asp-action="Index" class="btn btn-access">Acceder</a>
                </div>

                <!-- Inventario -->
                <div class="access-card card-inventory">
                    <div class="card-icon">
                        <i class="bi bi-box-seam"></i>
                    </div>
                    <h3 class="card-title">Inventario</h3>
                    <p class="card-description">Gestiona los recursos disponibles</p>
                    <a asp-controller="Inventario" asp-action="Index" class="btn btn-access">Acceder</a>
                </div>

                <!-- Recursos -->
                <div class="access-card card-resources">
                    <div class="card-icon">
                        <i class="bi bi-list-check"></i>
                    </div>
                    <h3 class="card-title">Recursos</h3>
                    <p class="card-description">Administra el catálogo completo</p>
                    <a asp-controller="Recurso" asp-action="Index" class="btn btn-access">Acceder</a>
                </div>

                <!-- Beneficiarios -->
                <div class="access-card card-beneficiaries">
                    <div class="card-icon">
                        <i class="bi bi-people-fill"></i>
                    </div>
                    <h3 class="card-title">Beneficiarios</h3>
                    <p class="card-description">Administra personas beneficiadas</p>
                    <a asp-controller="Beneficiarios" asp-action="Index" class="btn btn-access">Acceder</a>
                </div>

                <!-- Voluntarios -->
                <div class="access-card card-volunteers">
                    <div class="card-icon">
                        <i class="bi bi-person-badge"></i>
                    </div>
                    <h3 class="card-title">Voluntarios</h3>
                    <p class="card-description">Gestión de colaboradores</p>
                    <a asp-controller="Voluntarios" asp-action="Index" class="btn btn-access">Acceder</a>
                </div>
            </div>
        </div>
    </section>
</div>