@model ProyectoONGDBNoSQL.ViewModels.DonacionViewModel

@{
    ViewData["Title"] = "Crear Donación";
}

<h2>Crear Donación</h2>

<form asp-action="Create" method="post">
    
    <div class="form-group">
        <label asp-for="DonanteId">Seleccione Donante (Usuario)</label>
        @Html.DropDownListFor(model => model.DonanteId, Model.DonantesList, "Seleccione un donante", new { @class = "form-control" })
        <span asp-validation-for="DonanteId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FechaDonacion">Fecha de Donación</label>
        <input asp-for="FechaDonacion" class="form-control" type="date" />
        <span asp-validation-for="FechaDonacion" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Tipo">Tipo (monetaria, insumos, etc.)</label>
        <input asp-for="Tipo" class="form-control" />
        <span asp-validation-for="Tipo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Detalle">Detalle</label>
        <input asp-for="Detalle" class="form-control" />
        <span asp-validation-for="Detalle" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Estado">Estado (pendiente, recibida, en tránsito, etc.)</label>
        <input asp-for="Estado" class="form-control" />
        <span asp-validation-for="Estado" class="text-danger"></span>
    </div>

    <!-- Campo para el teléfono de contacto -->
    <div class="form-group">
        <label asp-for="ContactoTelefono">Teléfono de Contacto</label>
        <input asp-for="ContactoTelefono" class="form-control" />
        <span asp-validation-for="ContactoTelefono" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Crear Donación</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
