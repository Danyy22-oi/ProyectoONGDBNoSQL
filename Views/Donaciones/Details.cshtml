@model ProyectoONGDBNoSQL.Models.Donacion

@{
    ViewData["Title"] = "Detalles de la Donación";
}

<h2>Detalles de la Donación</h2>

<dl class="row">
    <dt class="col-sm-2">Donante</dt>
    <dd class="col-sm-10">@Model.DonanteId</dd>

    <dt class="col-sm-2">Fecha de Donación</dt>
    <dd class="col-sm-10">@Model.FechaDonacion.ToShortDateString()</dd>

    <dt class="col-sm-2">Tipo</dt>
    <dd class="col-sm-10">@Model.Tipo</dd>

    <dt class="col-sm-2">Detalle</dt>
    <dd class="col-sm-10">@Model.Detalle</dd>

    <dt class="col-sm-2">Estado</dt>
    <dd class="col-sm-10">@Model.Estado</dd>
</dl>

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</p>
