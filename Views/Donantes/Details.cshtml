@model ProyectoONGDBNoSQL.Models.Donante

@{
    ViewData["Title"] = "Detalles del Donante";
}

<h2>Detalles del Donante</h2>

<dl class="row">
    <dt class="col-sm-2">Nombre</dt>
    <dd class="col-sm-10">@Model.Nombre</dd>

    <dt class="col-sm-2">Tipo de Donante</dt>
    <dd class="col-sm-10">@Model.TipoDonante</dd>

    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.Contacto.Email</dd>

    <dt class="col-sm-2">Teléfono</dt>
    <dd class="col-sm-10">@Model.Contacto.Telefono</dd>
</dl>

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</p>
