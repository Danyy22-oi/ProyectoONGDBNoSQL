@model ProyectoONGDBNoSQL.Models.Donante

@{
    ViewData["Title"] = "Eliminar Donante";
}

<h2>Eliminar Donante</h2>

<h4>¿Está seguro de que desea eliminar este donante?</h4>
<hr />

<dl class="row">
    <dt class="col-sm-2">Nombre</dt>
    <dd class="col-sm-10">@Model.Nombre</dd>

    <dt class="col-sm-2">Tipo de Donante</dt>
    <dd class="col-sm-10">@Model.TipoDonante</dd>

    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.Contacto.Email</dd>

    <dt class="col-sm-2">Teléfono</dt>
    <dd class="col-sm-10">@Model.Contacto.Telefono</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
