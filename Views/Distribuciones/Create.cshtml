@model ProyectoONGDBNoSQL.ViewModels.DistribucionViewModel


@{
    ViewData["Title"] = "Crear Distribucion";
}

<h2>Crear Distribucion</h2>

<form asp-action="Create" method="post">
    
    <div class="form-group">
        <label asp-for="ProyectoId">Seleccione un Proyecto</label>
        @Html.DropDownListFor(model => model.ProyectoId, Model.ProyectosList, "Seleccione un Proyecto", new { @class = "form-control" })
        <span asp-validation-for="ProyectoId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FechaEnvio">Fecha de Envio</label>
        <input asp-for="FechaEnvio" class="form-control" />
        <span asp-validation-for="FechaEnvio" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Destino">Destino</label>
        <input asp-for="Destino" class="form-control" />
        <span asp-validation-for="Destino" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Estado">Estado</label>
        <input asp-for="Estado" class="form-control" />
        <span asp-validation-for="Estado" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Crear Distribucion</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
