@model ProyectoONGDBNoSQL.ViewModels.BeneficiarioViewModel

@{
    ViewData["Title"] = "Editar Donación";
}

<h2>Editar Donación</h2>

<form asp-action="Edit" method="post">
   
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Nombre">Nombre del Beneficiario</label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Contacto">Contacto</label>
        <input asp-for="Contacto" class="form-control" />
        <span asp-validation-for="Contacto" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Ubicacion">Ubicación</label>
        <input asp-for="Ubicacion" class="form-control" />
        <span asp-validation-for="Ubicacion" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Necesidades">Necesidades</label>
        <input asp-for="Necesidades" class="form-control" />
        <span asp-validation-for="Necesidades" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Proyectos">Proyectos Asociados</label>
        @Html.DropDownListFor(model => model.Proyectos, Model.ProyectosList, "Seleccione un Proyecto", new { @class = "form-control" })
        <span asp-validation-for="Proyectos" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}