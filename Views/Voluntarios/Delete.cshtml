@model ProyectoONGDBNoSQL.Models.Voluntario

@{
    ViewData["Title"] = "Eliminar Voluntario";
}

<h2>Eliminar Voluntario</h2>

<h4>¿Está seguro de que desea eliminar este voluntario?</h4>
<hr />

<dl class="row">
    <dt class="col-sm-2">ID de Usuario Asociado</dt>
    <dd class="col-sm-10">@Model.InfoUsuarioId</dd>
    <dt class="col-sm-2">Habilidades</dt>
    <dd class="col-sm-10">@string.Join(", ", Model.Habilidades ?? new List<string>())</dd>
    <dt class="col-sm-2">Disponibilidad</dt>
    <dd class="col-sm-10">@Model.Disponibilidad</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
