@model ProyectoONGDBNoSQL.ViewModels.VoluntarioViewModel

@{
    ViewData["Title"] = "Editar Voluntario";
}

<h2>Editar Voluntario</h2>

<form asp-action="Edit" method="post">
   
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="InfoUsuarioId">Seleccione Usuario</label>
        @Html.DropDownListFor(model => model.InfoUsuarioId, Model.UsuariosList, "Seleccione un usuario", new { @class = "form-control" })
        <span asp-validation-for="InfoUsuarioId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="HabilidadesText">Habilidades (separadas por comas)</label>
        <input asp-for="HabilidadesText" class="form-control" />
        <span asp-validation-for="HabilidadesText" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Disponibilidad">Disponibilidad</label>
        <input asp-for="Disponibilidad" class="form-control" />
        <span asp-validation-for="Disponibilidad" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Seleccione Proyectos (mantenga pulsado Ctrl para seleccionar múltiples)</label>
        @Html.ListBoxFor(model => model.ProyectosSeleccionados, Model.ProyectosList, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Guardar cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
